<div class="popup-overlay container-fluid">
  <div class="popup row">
    <div class="col-12 text-center">
      <h1><b>Subscribe to plan <%=plan.name%></b></h1>
      <h2>
        <b
          >Price: <%=plan.precio.toLocaleString('es', {useGrouping:true,
          minimumFractionDigits: 2, maximumFractionDigits: 2})%> USD</b
        >
      </h2>
      <p class="mb-5">
        Your Balance: <%= balance.toLocaleString('es', {useGrouping:true,
        minimumFractionDigits: 2, maximumFractionDigits: 2})%> USD
      </p>
      <button
        type="submit"
        class="btn btn-default btn-block animation-on-hover"
      >
        Subscribe
      </button>
    </div>
    <div class="col-6">
      <a
        href="javascript:sendTransaction()"
        type="submit"
        class="btn btn-default btn-block animation-on-hover"
      >
        Add funds with metamask
      </a>
    </div>
    <div class="col-6">
      <button
        type="submit"
        class="btn btn-default btn-block animation-on-hover"
      >
        Add funds
      </button>
    </div>
  </div>
</div>
