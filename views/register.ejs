    $(document).on("submit", "form#registerForm", function (e) {
      e.preventDefault();
      $("html").append("<div class='overlay'></div>");
      let url = "/register";
      let loginInfo = $("#registerForm").serializeArray();
      let response = {};
      loginInfo.map((field) => {
        response[`${field.name}`] = field.value;
      });
      $.ajax({
        url: url,
        type: "POST",
        data: response,
      })
      .done((res) => {
        $("html").html(res);

        console.log(res);
      })
      .fail((err) => {
        console.log(err);
      });
    });
